APP_ENV=testing
APP_KEY=base64:AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=
APP_DEBUG=true
APP_URL=http://localhost

# Тестовая база: SQLite in-memory (молниеносно)
DB_CONNECTION=sqlite
DB_DATABASE=:memory:

# Очереди, кеш, сессии — чтобы не мешали тестам
CACHE_DRIVER=array
SESSION_DRIVER=array
QUEUE_CONNECTION=sync

# Отключаем логи в тестах
LOG_CHANNEL=null

# API / внешние сервисы
HTTP_TIMEOUT=5
